@model IEnumerable<Giori_Consul.Models.Medicamento>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">

        <p></p>
        <center> <h1>Lista de Medicamentos</h1></center>
        <p> </p><p> </p>

        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">

                        <div class="col col-xs-1">
                            <h3 class="panel-title hidden-xs"></h3>
                        </div>
                        @using (Html.BeginForm())
                        {
                            <div class="col col-xs-4">
                                @Html.DropDownList("Campo",
                                  ViewBag.itensFilter as List<SelectListItem>,
                                  "Selecione um item",
                                  new { @class = "form-control " })
                            </div>
                            <div class="col col-xs-3">
                                <input id="filter" name="valor" class="form-control" />
                            </div>
                            <div class="col col-xs-2">
                                <button type="submit" value="Filter" class="btn btn-default fa fa-search" />

                            </div>

                        }
                        <div class="col col-xs-1 text-right ">
                            @Html.ActionLink("Novo", "Create", "Medicamentos", null, new { @class = "btn btn-sm btn-primary btn-create " })
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>
                                <th><em class="fa fa-cog"></em></th>

                                <th class="hidden-xs">
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.NomeFabricante)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.NomeGenerico)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NomeMedicamento)
                                </th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>

                                <tr>
                                    <td class="buttonsList">
                                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-default fa fa-pencil" })
                                        @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa fa-trash" })
                                        <br />
                                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-primary fa fa-eye" })
                                    </td>

                                    <td class="hidden-xs">@item.Id</td>
                                    <td>@item.NomeFabricante</td>
                                    <td>@item.NomeGenerico</td>
                                    <td>@item.NomeMedicamento</td>
                                </tr>

                            </tbody>
                        }

                    </table>

                </div>

            </div>

        </div>
    </div>
</div>

