@model Giori_Consul.Models.ExamesRealizados

@{
    ViewBag.Title = "Edit";
    var id = Model.Id;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-sec">
        <h4>Editar Resultado de exames</h4>
        <hr />
        <div class="form-group row">
            <div class="col-md-8">
                @Html.ActionLink("Imprimir Resultados ", "ExamesRealizados", "ImpressaoExames", new { IdExame = Model.Id }, new { @class = "btn btn-primary bntCustom" })
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.IDExame, "Exame", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                @Html.DropDownList("IDExame", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDExame, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataRealizacao, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataRealizacao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DataRealizacao, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Resultados, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Resultados, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Resultados, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-8">
                <button type="submit" value="Save" class="btn btn-primary btnEnviar">Salvar</button>
                @Html.ActionLink("Cancelar ", "Index", null, new { @class = "btn btn-danger bntCustom" })
            </div>
        </div>
    </div>
}
@Html.Partial("~/Views/Shared/_CssDefaultCrudView.cshtml")