@model IEnumerable<Giori_Consul.Models.Consulta>

<div class="panel panel-default panel-table">
    <div class="panel-heading">

        <div class="row">

            <div class="col col-xs-1">
                <h3 class="panel-title hidden-xs"></h3>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered table-list">
            <thead>
                <tr>

                    <th class="hidden-xs">
                        @Html.DisplayNameFor(model => model.IDConsulta)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.IDMedico)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.IDPaciente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Time)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cancelada)
                    </th>
                </tr>
            </thead>
            @foreach (var item in ViewData["AllConsultas"] as List<Giori_Consul.Models.Consulta>)
            {
                <tbody>
                    <tr>
                        <td class="hidden-xs">@item.IDConsulta</td>
                        <td>@item.Medico.Nome</td>
                        <td>@item.Paciente.Nome</td>
                        <td>@item.Time</td>
                        @if (item.Cancelada == true)
                        {
                            <td>Sim</td>
                        }
                        else
                        {
                            <td>Não</td>
                        }
                    </tr>
                </tbody>
            }

        </table>

    </div>

</div>

